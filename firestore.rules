rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);

      match /lists/{listId} {
        allow read, write: if isOwner(uid);

        match /vocabs/{vocabId} {
          allow read, write: if isOwner(uid);
        }
      }
    }
  }
}
